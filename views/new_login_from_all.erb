<div class = "form" id="all_logins_form">
  <form action="/users/<%= @user_id %>/all_logins" class="form__content" method="post">
    <legend class="form__header">Add new login</legend>
    <fieldset class="form__group">
      <label for="login_name" class="form__prompt">Name</label>
      <input type="text" name="login_name" class="form__input" value="<%= params[:login_name] %>" placeholder="Google Mail">
    </fieldset>
    <fieldset class="form__group">
      <label for="url" class="form__prompt">Website</label>
      <input type="url" name="url" class="form__input" placeholder="https://www.example.com" value="<%= params[:url] || 'https://'%>"
      title="https://www.example.com" required>
    </fieldset>
    <fieldset class="form__group">
      <label for="email" class="form__prompt">Email</label>
      <input type="email" name="email" value="<%= params[:email] %>" class="form__input" required>
    </fieldset>
    <fieldset class="form__group">
      <label for="username" class="form__prompt">Username</label>
      <input type="text" name="username" value="<%= params[:username] %>" class="form__input" >
    </fieldset>
    <fieldset class="form__group">
      <label for="password" class="form__prompt">Password</label>
      <div class="password__box">
        <input type="password" name="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%^&+=]).{8,}$" title="Must be minimum 8 characters and include at least 1 lowercase character, 1 uppercase character, 1 number, and one symbol (@#$%^&+=)" class="form__input password__input" value="<%= params[:password] %>" required>
        <div class="password__check">
          <svg class="password__icon password__icon--hidden">
            <use xlink:href="/images/sprite.svg#icon-view-hide"></use>
          </svg>
          <svg class="password__icon password__icon--shown hide">
            <use xlink:href="/images/sprite.svg#icon-view-show"></use>
          </svg>
        </div>
      </div>
    </fieldset>
    <fieldset class="form__group">
      <label for="category_name" class="form__prompt">Category</label>
      <select id="category_name" name="category_name" class="form__input" required>
        <% @categories.each do |category| %>
          <option><%= category[:category_name] %></option>
        <% end %>
      </select>
      <a href="/users/<%= @user_id %>/categories/new" class="a form__external">New Category</a>
    </fieldset>
    <fieldset class="form__group">
      <label for="note" class="form__prompt">Note</label>
      <textarea id="note" name="note" value="<%= params[:note] %>" class="form__input" rows="3" cols="35" ></textarea>
    </fieldset>
    <fieldset class="form__submit">
      <input type="submit" value="Add" class="form__btn form__btn--pos">
      <a class="form__btn form__btn--neg" href="/users/<%= @user_id %>/all_logins" >Cancel</a>
    </fieldset>
  </form>
</div>
