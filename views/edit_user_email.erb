<div class = "form">
  <div class="form__content">
    <form action="/users/<%= @user_id %>/email" class="form__form" method="post">
      <legend class="form__header">Editing "<%= @user_email %>"</legend>
      <fieldset class="form__group">
        <label for="email" class="form__prompt">Email</label>
        <input class="form__input" type="email" placeholder="janesmith@gmail.com" name="email" value="<%= params[:email] || @user_email %>" required>
      </fieldset>
      <fieldset class="form__submit">
        <input type="submit" value="Edit" class="form__btn form__btn--pos">
        <a class="form__btn form__btn--neg" href="/users/<%= @user_id %>/settings">Cancel</a>
      </fieldset>
    </form>
  </div>
</div>
